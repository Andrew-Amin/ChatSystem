<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".PhoneRegistrationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     you can Register using your phone number.\n
after enter phone number you will receive a verification code , use it to register.   "
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#9fff"
        android:textAlignment="center"
        android:layout_below="@+id/verify_btn"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_phoneNumber_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/et_bg"
        android:textAlignment="center"
        android:hint="+CC  Phone number ..."
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_verificationCode_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_phoneNumber_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_bg"
        android:gravity="center"
        android:hint="Enter the code ..."
        android:visibility="invisible" />

    <Button
        android:id="@+id/sendVerificationCode_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bg"
        android:text="Send code"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendVerificationCode_btn"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg"
        android:layout_centerHorizontal="true"
        android:text="verify"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:visibility="invisible" />

</RelativeLayout>